.icons >>> .swiper-container
  padding-bottom: 50%
  height: 0
  overflow: hidden
.icons
  margin-top: .1rem
  .icon
    float: left
    position: relative
    // <---固定宽高比
    width: 25%
    height: 0
    padding-bottom: 25%
    overflow: hidden
    // 固定宽高比--->
    .icon-img
      box-sizing: border-box
      // <---相当于 width: 100%
      position: absolute
      left: 0
      right: 0
      // 相当于 width: 100%--->
      top: 0
      bottom: .44rem // for icon-desc
      padding: .1rem
      .icon-img-content
        display: block
        margin: 0 auto // block 居中
        height: 100%
    .icon-desc
      // <---相当于 width: 100%
      position: absolute
      left: 0
      right: 0
      // 相当于 width: 100%--->
      bottom: 0
      height: .44rem
      line-height: .44rem
      text-align: center
      color: $darkTextColor
      ellipsis()
